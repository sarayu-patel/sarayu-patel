import java.util.*;
public class Main{
    public static void main(String[]args){
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the size of an array:");
         int n=sc.nextInt();
        
        int arr[]=new int[n];
        System.out.println("enter the elements of an array");
        for(int i=0;i<n;i++){
          arr[i]=sc.nextInt();
        }
       
        System.out.println(Arrays.toString(arr));
        
        
    }
}
